<?xml version="1.0"?>
<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
        xmlns:em="http://www.mozilla.org/2004/em-rdf#">

    <Description about="urn:mozilla:install-manifest">
        <em:id>better-copy@josephallyndree.com</em:id>
        <em:name>Better Copy</em:name>
        <em:version>1.0.0</em:version>
        <em:description>Enhance annotation copying in Zotero with customizable Markdown formatting</em:description>
        <em:creator>Joseph Allyndree</em:creator>
        <em:homepageURL>https://github.com/yourusername/better-copy</em:homepageURL>
        <em:type>2</em:type>
        <em:bootstrap>false</em:bootstrap>
        
        <!-- Zotero 6 compatibility -->
        <em:targetApplication>
            <Description>
                <em:id>zotero@chnm.gmu.edu</em:id>
                <em:minVersion>6.0</em:minVersion>
                <em:maxVersion>6.*</em:maxVersion>
            </Description>
        </em:targetApplication>
        
        <!-- Firefox compatibility (required for Zotero) -->
        <em:targetApplication>
            <Description>
                <em:id>{ec8030f7-c20a-464f-9b0e-13a3a9e97384}</em:id>
                <em:minVersion>60.0</em:minVersion>
                <em:maxVersion>102.*</em:maxVersion>
            </Description>
        </em:targetApplication>
    </Description>
</RDF>